<!DOCTYPE html>
<html>

<head>
  <title>IIITDMJ JobPortal</title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="theme-color" content="#4DA5F4" />
  <meta name="csrf-token" />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/stylesheets/main.css" />
  <link rel="stylesheet" href="/stylesheets/footer.css" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

</head>

<body>


  
 
  

  <% if(messages.errors) {%>
    <div class="alert alert-danger fade show">
      <!-- <button class="close" type="button" data-dismiss="alert">
        <i class="fa-fa-circle">
        </i>
      </button> -->
      <% for(let error of messages.errors){%>
        <center><%=error.msg%></center>
        <%}%>
    </div>
    
  <%}%>

  <% if(messages.info) {%>
    <div class="alert alert-info fade show">
      <!-- <button class="close" type="button" data-dismiss="alert">
        <i class="fa-fa-circle">
        </i>
      </button> -->
      <% for(let info of messages.info){%>
        <center><%=info.msg%></center>
        <%}%>
    </div>
    
  <%}%>

  <% if(messages.success) {%>
    <div class="alert alert-success fade show">
      <!-- <button class="close" type="button" data-dismiss="alert">
        <i class="fa-fa-circle">
        </i>
      </button> -->
      <% for(let success of messages.success){%>
        <center><%=success.msg%></center>
        <%}%>
    </div>
    
  <%}%>


  <div class="pb-2 mt-2 mb-4 border-bottom">
    <h3><center>Update Admin Password</center></h3>
</div>
<form method="POST" action="/admin/updatePassword"><input type="hidden" name="email" value= <%=email%> />
    <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="email">New Password</label>
        <div class="col-md-7"><input class="form-control" type="password" name="password1" autofocus="autofocus"  required="required" /></div>
    </div>

    <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="email">Confirm Password</label>
        <div class="col-md-7"><input class="form-control" name="password2" type="password" autofocus="autofocus"  required="required" /></div>
    </div>
    <div class="form-group offset-sm-3 col-md-7 pl-2"><button class="btn btn-primary" type="submit"><i class="fa fa-key fa-sm"></i>Reset Password</button></div>


</form>

</body>

</html>